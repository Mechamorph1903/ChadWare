<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChadWare.Views.Pages.SettingsPage"
             BackgroundColor="#D1D1C4">

    <VerticalStackLayout>
        <HorizontalStackLayout Spacing="30">
            <Image Source="chadwarelogo.png"
               HeightRequest="150"
               WidthRequest="150"
               VerticalOptions="Start"/>

            <SearchBar Placeholder ="Search..."
                   Margin ="20"
                   WidthRequest="800"
                   HeightRequest="40"
                   VerticalOptions="Center"
                   BackgroundColor="White"/>

            <Image Source="usericon.png"
               HeightRequest="80"
               WidthRequest="80"
               HorizontalOptions="End"/>
        </HorizontalStackLayout>

        <BoxView 
        HeightRequest="1"
        BackgroundColor="Black" 
        Margin="10,10"
        Color="LightSlateGray"/>

        <HorizontalStackLayout Spacing="30" Padding="10" BackgroundColor="Transparent">

            <!-- Smaller Box -->
            <Border 
            BackgroundColor="White"
            StrokeShape="RoundRectangle 10"
            
            Stroke="Transparent"
            Padding="15"
            WidthRequest="300"
            HeightRequest="400">
                <VerticalStackLayout Spacing="10" Padding="20">
                    <!-- Account Header -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Account Icon -->
                        <Border Grid.Column="0" 
                           StrokeShape="RoundRectangle 25"
                           HeightRequest="50" 
                           WidthRequest="50" 
                           BackgroundColor="#333333">
                            <Label Text="S" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" 
                               TextColor="White" 
                               FontSize="24" 
                               FontAttributes="Bold"/>
                        </Border>

                        <!-- Account Name -->
                        <Label Grid.Column="1"
                           Text="Sarah's Account"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           Margin="5,0,0,0"/>
                    </Grid>

                    <!-- Account Info Section -->
                    <Label Text="Account info" 
                       FontSize="20" 
                       FontAttributes="Bold"/>
                    <BoxView HeightRequest="1" 
                         BackgroundColor="#CCCCCC" 
                         Margin="0,0,0,10"/>

                    <!-- Personal Info with icon -->
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" 
                           Source="personal_info.logo.png" 
                           HeightRequest="24" 
                           WidthRequest="24"/>

                        <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0">
                            <Label Text="Personal Info" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                            <Label Text="Password, email, mobile, and more" 
                               FontSize="12" 
                               TextColor="#666666"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Communications with icon -->
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" 
                           Source="messages_logo.png" 
                           HeightRequest="24" 
                           WidthRequest="24"/>

                        <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0">
                            <Label Text="Communications" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                            <Label Text="Email and mail preferences" 
                               FontSize="12" 
                               TextColor="#666666"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Payment Methods with icon -->
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" 
                           Source="payment_logo.png" 
                           HeightRequest="24" 
                           WidthRequest="24"/>

                        <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0">
                            <Label Text="Payment Methods" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                            <Label Text="Add a payment method" 
                               FontSize="12" 
                               TextColor="#666666"/>
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" 
                         BackgroundColor="#CCCCCC" 
                         Margin="0,10"/>

                    <!-- Sign Out Button -->
                    <Button Text="Sign out"
                        
                        HorizontalOptions="Start"
                        FontSize="16"
                        Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Border>

            <!-- Bigger Box -->
            <Border 
            BackgroundColor="White"
            StrokeShape="RoundRectangle 10"
            
            Stroke="Transparent"
            Padding="15"
            WidthRequest="600"
            HeightRequest="400">
                <ScrollView>
                    <VerticalStackLayout Spacing="15" Padding="20">
                        <!-- Header -->
                        <Label Text="Password and Personal Info" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           Margin="0,0,0,10"/>

                        <!-- Sign-in Info Section -->
                        <Label Text="Sign-in Info" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           Margin="0,10,0,5"/>

                        <!-- Email Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Email" 
                               FontSize="14"
                               TextColor="#666666"/>
                            <Label Text="sarahsmith55@gmail.com" 
                               FontSize="16"/>
                            <Label Text="Change email" 
                               TextColor="Blue"
                               TextDecorations="Underline"
                               FontSize="14">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnChangeEmailTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>

                        <!-- Password Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Password" 
                               FontSize="14"
                               TextColor="#666666"/>
                            <Label Text="Change password" 
                               TextColor="Blue"
                               TextDecorations="Underline"
                               FontSize="14">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnChangePasswordTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>

                        <!-- Personal Info Section -->
                        <Label Text="Personal Info" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           Margin="0,10,0,5"/>

                        <!-- Name Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Name" 
                               FontSize="14"
                               TextColor="#666666"/>
                            <Label Text="Sarah Smith" 
                               FontSize="16"/>
                            <Label Text="Change name" 
                               TextColor="Blue"
                               TextDecorations="Underline"
                               FontSize="14">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnChangeNameTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>

                        <!-- Mobile Number Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Mobile number" 
                               FontSize="14"
                               TextColor="#666666"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                   Text="(123)-456-789" 
                                   FontSize="16"/>
                                <Border Grid.Column="1"
                                   BackgroundColor="Green"
                                   StrokeShape="RoundRectangle 12"
                                   HeightRequest="24"
                                   WidthRequest="24"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center">
                                    <Image Source="check_icon.png"
                                       HeightRequest="16"
                                       WidthRequest="16"/>
                                </Border>
                            </Grid>
                            <Label Text="Change mobile number" 
                               TextColor="Blue"
                               TextDecorations="Underline"
                               FontSize="14">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnChangeMobileNumberTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>

                        <!-- Birthday Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Share your birth date with us" 
                               FontSize="14"
                               TextColor="#666666"/>
                            <Label Text="Add birthday" 
                               TextColor="Blue"
                               TextDecorations="Underline"
                               FontSize="14">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAddBirthdayTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
