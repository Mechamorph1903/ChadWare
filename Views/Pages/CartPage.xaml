<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChadWare.Views.Pages.CartPage"
             Title="CartPage">
    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- Top Navigation Bar -->
            <Grid Padding="10" BackgroundColor="LightGray" ColumnDefinitions="*,2*,*,*,*,Auto" VerticalOptions="Start">
                <Label Text="CHAD" FontSize="24" FontAttributes="Bold" />
                <Label Text="Men" VerticalOptions="Center" HorizontalOptions="Center" />
                <Label Text="Women" VerticalOptions="Center" HorizontalOptions="Center" />
                <Label Text="New and Trending" VerticalOptions="Center" HorizontalOptions="Center" />
                <Label Text="Sale" TextColor="Red" VerticalOptions="Center" HorizontalOptions="Center" />
                <HorizontalStackLayout VerticalOptions="Center">
                    <Image Source="user_icon.png" WidthRequest="24" HeightRequest="24"/>
                    <Label Text="Sarah" Margin="5,0,0,0"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Breadcrumb -->
            <HorizontalStackLayout Padding="10" Spacing="5">
                <Image Source="home_icon.png" WidthRequest="16" HeightRequest="16" />
                <Label Text="Women's Fashion Shoes and Accessories" FontSize="14" />
            </HorizontalStackLayout>

            <!-- Hero Banner -->
            <Grid HeightRequest="200">
                <Image Source="women_banner.png" Aspect="AspectFill"/>
                <Label Text="Find the latest trends in womenâ€™s fashion"
                       FontSize="28"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </Grid>

            <!-- Category Grid -->
            <Grid Padding="10" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto">
                <!-- Category 1: Apparel -->
                <VerticalStackLayout Grid.Column="0">
                    <Image Source="apparel.png" Aspect="AspectFill" HeightRequest="100" />
                    <Label Text="Apparel" HorizontalOptions="Center" FontSize="16"/>
                </VerticalStackLayout>
                <!-- Category 2: Bags -->
                <VerticalStackLayout Grid.Column="1">
                    <Image Source="bags.png" Aspect="AspectFill" HeightRequest="100" />
                    <Label Text="Bags" HorizontalOptions="Center" FontSize="16"/>
                </VerticalStackLayout>
                <!-- Category 3: Shoes -->
                <VerticalStackLayout Grid.Column="2">
                    <Image Source="shoes.png" Aspect="AspectFill" HeightRequest="100" />
                    <Label Text="Shoes" HorizontalOptions="Center" FontSize="16"/>
                </VerticalStackLayout>
                <!-- Category 4: Jewelry -->
                <VerticalStackLayout Grid.Column="3">
                    <Image Source="jewelry.png" Aspect="AspectFill" HeightRequest="100" />
                    <Label Text="Jewelry" HorizontalOptions="Center" FontSize="16"/>
                </VerticalStackLayout>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>