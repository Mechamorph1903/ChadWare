<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChadWare.Views.Pages.ItemsPage"
             Title="ItemsPage"
             BackgroundColor="#a6a6a6">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">

            <!-- Page Title -->
            <Label Text="Men's Clothing"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <!-- Products Grid -->
            <CollectionView ItemsLayout="VerticalGrid, 2" x:Name="MensClothingCollection" Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10"
                               Margin="5"
                               BackgroundColor="White"
                               >

                            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">

                                <!-- Product Image -->
                                <Image Source="menapparel1.jpg"
                                       Aspect="AspectFill"
                                       HeightRequest="140"
                                       WidthRequest="140"
                                       HorizontalOptions="Center"
                                       />

                                <!-- Product Name -->
                                <Label Text="Shirt"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="Black"
                                       LineBreakMode="TailTruncation"/>

                                <!-- Price -->
                                <Label Text="{Binding Price}"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#4CAF50"/>

                                <!-- Add to Cart -->
                                <Button Text="Add to Cart"
                                        BackgroundColor="#2e86de"
                                        TextColor="White"
                                        FontSize="14"
                                        CornerRadius="8"
                                        WidthRequest="120"
                                        HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>