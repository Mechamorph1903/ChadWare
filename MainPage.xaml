<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChadWare.MainPage"
                          BackgroundColor="#a6a6a6">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Sign In Heading -->
            <Label Text="Sign In"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start" />


            <Image Source="chadwarelogo.png" 
                   HeightRequest="80"
                   Aspect="AspectFit"
                   HorizontalOptions="Start" />

            <!-- Email Entry -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   PlaceholderColor="Gray"
                   BackgroundColor="Transparent"
                   HeightRequest="40"
                   WidthRequest="350"/>


            <!-- Password Entry -->
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="true"
                   PlaceholderColor="Gray"
                   BackgroundColor="Transparent"
                   HeightRequest="40"
                   WidthRequest="350"/>

            <BoxView HeightRequest="1" BackgroundColor="Black" />

            <!-- Keep Me Signed In Checkbox -->
            <HorizontalStackLayout Spacing="10" 
                                   HorizontalOptions="Center"
                                   >
                <CheckBox Color="Black"
                          Scale="2"/>
                <VerticalStackLayout Spacing="2">
                    <Label Text="Keep Me Signed In"
                           FontAttributes="Bold"
                           TextColor="Black"
                           FontSize="20"
                           
                           />
                    <Label Text="Uncheck if you are using a public device"
                           TextColor="Gray"
                           FontSize="15"
                           />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Login Button -->
            <Button Text="Login"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="30"
                    WidthRequest="230"
                    FontSize="20" 
                    Clicked="OnLoginClicked"/>

            <!-- Sign up Button -->
            <Button Text="Sign up"
                    BackgroundColor="White"
                    BorderColor="Black"
                    BorderWidth="1"
                    TextColor="Black"
                    CornerRadius="20"
                    HeightRequest="30"
                    WidthRequest="230"
                    FontSize="20"
                    Clicked="OnSignUpClicked" />

            <!-- Forgot Password -->
            <Label Text="Forgot Password"
                   TextColor="Gray"
                   FontSize="13"
                   HorizontalOptions="Center" />

            <!-- Divider and "Or" -->
            <Grid ColumnDefinitions="*,Auto,*"
                  VerticalOptions="Center"
                  Margin="0,20,0,0">
                <BoxView Grid.Column="0" HeightRequest="1" BackgroundColor="Gray" VerticalOptions="Center" />
                <Label Grid.Column="1" Text="Or" TextColor="Black" Margin="10,0" />
                <BoxView Grid.Column="2" HeightRequest="1" BackgroundColor="Gray" VerticalOptions="Center" />
            </Grid>

            <!-- Rewards Text -->
            <Label Text="Signed Up for Chad Ware House Rewards In Store?"
                   FontSize="13"
                   TextColor="Black"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

  